#!/bin/sh

# Credits to Luke Smith https://github.com/LukeSmithxyz/voidrice/blob/master/.local/bin/compiler

# This script will compile or run another finishing operation on a document. I
# have this script run via vim.

# Compiles .md

file=$(readlink -f "$1")
dir=${file%/*}
base="${file%.*}"
ext="${file##*.}"

cd "$dir" || exit 1

pandoc -t ms --highlight-style=kate -s -o "$base".pdf "$file"
